#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
    double x;
    int f;
    cin >> x;
    
   if (x < 0) {
        f = 0;
    } 
    
    else {
        if (int(x) % 2 == 0) {
            f = -1;
        } 
        else {
            f = 1;
        }
    }
    
    cout << f;
    
    return 0;
}
