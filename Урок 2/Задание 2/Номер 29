#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
    int x;
    cin >> x;
    
    if (x == 0) {
        cout << "нулевое число";
    } 
    
    else {
        if (x > 0 && x % 2 == 0) {
            cout << "положительное четное число";
        } 
        else  {
            if (x > 0 && x % 2 != 0) {
                cout << "положительное нечетное число";
            } 
            else {
                if (x < 0 && x % 2 == 0) {
                    cout << "отрицательное четное число";
                } 
                else {
                    cout << "отрицательное нечетное число";
                }
            }
        }
    }
    
    return 0;
}
