#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
    double A, B, C, AC, BC, sum;
    
    cout << "Введите координаты трех точек на числовой оси: ";
    cin >> A >> B >> C;
    
    AC = abs(C - A);
    BC = abs(C - B);
    sum = AC + BC;
    
    cout << "Длина отрезка АС: " << AC << endl;
    cout << "Длина отрезка ВС: " << BC << endl;
    cout << "Сумма длин отрезков АС и ВС: " << sum << endl;
    
    return 0;
}
