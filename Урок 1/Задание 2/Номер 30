#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
    double a, degrees;
    
    const double pi = 3.14;
    
    cout << "Введите значение угла в радианах: ";
    cin >> a;
    
    degrees = a * 180 / pi;
    
    cout << "Значение угла в градусах: " << degrees << endl;
    
    return 0;
}
