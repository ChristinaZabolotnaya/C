#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
    double a, b, c, P;
    
    cout << "Введите катеты прямоугольного треугольника: ";
    cin >> a >> b;
    
    c = sqrt(pow(a, 2) + pow(b, 2));
    P = a + b + c;
    
    cout << "Гипотенуза: " << c << endl;
    cout << "Периметр: " << P << endl;
    
    return 0;
}
