#include <iostream>
using namespace std;

int main() {
    
    double v, u, t1, t2, s;
    
    cout << "Введите скорость лодки в стоячей воде (км/ч): ";
    cin >> v;
    
    cout << "Введите скорость течения реки (км/ч): ";
    cin >> u;
    
    cout << "Введите время движения лодки по озеру (ч): ";
    cin >> t1;
    
    cout << "Введите время движения лодки по реке против течения (ч): ";
    cin >> t2;
    
    s = (v + u) * (t1 - t2) + (v - u) * t2;
    
    cout << "Путь, пройденный лодкой: " << s << " км" << endl;
    
    return 0;
}
