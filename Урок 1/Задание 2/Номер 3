#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
    double a, b, S, P;
    
    cout << "Введите стороны прямоугольника: ";
    cin >> a >> b;
    
    S = a * b;
    P = 2 * (a + b);
    
    cout << "Площадь прямоугольника: " << S << endl;
    cout << "Периметр прямоугольника: " << P << endl;
    
    return 0;
}
    
