#include <iostream>
using namespace std;

int main() {
    
    double v1, v2, s, t, s_total;
    
    cout << "Введите скорость первого автомобиля (км/ч): ";
    cin >> v1;
    
    cout << "Введите скорость второго автомобиля (км/ч): ";
    cin >> v2;
    
    cout << "Введите расстояние между автомобилями (км): ";
    cin >> s;
    
    cout << "Введите время (ч): ";
    cin >> t;
    
    s_total = s + (v1 + v2) * t; 
    
    cout << "Расстояние между автомобилями через " << t << " часов: " << s_total << " км" << endl;
    
    return 0;
}
