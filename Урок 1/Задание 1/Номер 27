#include <iostream>
#include <cmath>
using namespace std;

int main() {
    
    double r1, r2, area;
    
    cout << "Введите значение внешнего радиуса: ";
    cin >> r1;
    
    cout << "Введите значение внутреннего радиуса: ";
    cin >> r2;
    
    area = M_PI * (r1 * r1 - r2 * r2);
    
    cout << "Площадь кольца  = " << area << endl;
    
    return 0;
}

//M_PI = 3.14159265358979323846 (20 знаков после точки)
