#include <iostream>
#include <cmath>
using namespace std;

int main() {
    
    int n, d, e, s, p, f;
    
    cout << "Введите трехзначное число: ";
    cin >> n;
    
    d = n / 100;
    e = (n / 10) % 10;
    f = n % 10;
    s = d + e + f;
    p = d * e * f;
    
    cout << "Сумма цифр: " << s << endl;
    cout << "Произведение цифр: " << p << endl;
    
    return 0;
}
