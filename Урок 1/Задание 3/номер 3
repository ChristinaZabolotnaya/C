#include <iostream>
#include <cmath>
using namespace std;

int main() {
    
    int fileSize, kilobytes;
    
    cout << "Введите размер файла в байтах: ";
    cin >> fileSize;
    
    kilobytes = fileSize/1024;
    
    cout << "Количество полных килобайтов: " << kilobytes << endl;
    
    return 0;
}
